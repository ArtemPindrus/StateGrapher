<UserControl
    x:Class="StateGrapher.Views.OptionsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:StateGrapher.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:StateGrapher.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:OptionsViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="200"
    mc:Ignorable="d">
    <StackPanel Orientation="Vertical">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock
                Margin="0,0,5,0"
                Foreground="White"
                Text="Class Name" />
            <TextBox Grid.Column="1" Text="{Binding ClassName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock
                Grid.Row="1"
                Margin="0,0,5,0"
                Foreground="White"
                Text="Namespace" />
            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                Text="{Binding Namespace, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </Grid>

        <!--<StackPanel Orientation="Horizontal">
            <TextBlock
                Margin="0,0,5,0"
                Foreground="White"
                Text="Class Name" />
            <TextBox Width="100" Text="{Binding ClassName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock
                Margin="0,0,5,0"
                Foreground="White"
                Text="Namespace" />
            <TextBox Width="100" Text="{Binding Namespace, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>-->
    </StackPanel>
</UserControl>
